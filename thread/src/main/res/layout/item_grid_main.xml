<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="320px"
        android:layout_height="320px"
        android:id="@+id/grid_thumbnail"
        android:src="@drawable/default_icon"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/grid_extension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:background="@drawable/circletext"
        android:layout_alignTop="@id/grid_thumbnail"
        android:layout_alignLeft="@id/grid_thumbnail"
        android:layout_marginRight="5dp"
        android:padding="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/grid_title"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/grid_thumbnail"/>
</RelativeLayout>